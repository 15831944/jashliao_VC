clear;
close all;
w=0.5 %類比信號頻率0.5
t0=1/w %analogue signal period
ts=0.5*t0 %sampling period
td=0:ts:20 %sampling sequence

t=0:0.005:20 %analogue time
x1=sin(w.*t)
figure(1),plot(t,x1)
title('sin(0.5*t)')
x2=sin(w.*td);
figure(2),stem(td,x2)
title('sampling singnal of sin')

ws=(1/ts)  %以sinc函數還原成類比信號
for c=1:length(td)
    for d=1:length(w*td)
        x_c(d)=x2(d)*sinc(ws*(td(c)-ts*(d-1)));
    end
    x_d(c)=sum(x_c)
end
figure(3),plot(td,x_d)
title('reconstrcted singnal')